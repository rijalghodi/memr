{
    "swagger": "2.0",
    "info": {
        "description": "Second brain that understand you. Manage project, todo, and resources in single app.",
        "title": "Memr API",
        "contact": {
            "name": "Rijal Ghodi",
            "email": "rijalghodi.dev@gmail.com"
        },
        "license": {
